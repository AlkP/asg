<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th>
      <a href="/clients/<%= @client.id %>/contracts/new"
         data-remote="true"
         data-toggle="modal"><img src="/assets/plus.png"></a>
    </th>
    <th>
      Наименование
    </th>
    <th>
    </th>
  </tr>
  </thead>
  <tbody>
  <% @contracts.each do |c| %>
    <tr class="active">
      <td></td>
      <td>
        <a data-remote="true"
           href="/contracts/<%= c.id %>"
           onclick="" ><%= c.name %></a>

      </td>
      <td>
        <a data-confirm="Вы действительно хотите удалить контракт?"
           data-method="delete"
           data-remote="true"
           href="/contracts/<%= c.id %>"
           rel="nofollow"><img src="/assets/del.png"></a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>