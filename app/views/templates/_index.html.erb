<a href="templates/new"
   data-remote="true"
   role="button"
   class="btn btn-block btn-primary btn-sm"
   data-toggle="modal">Новый шаблон</a>
<div class="template-form"></div>
<table class="table">
  <thead>
  <tr>
    <th>
      Наименование
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @templates.each do |t_p| %>
    <tr class="active">
      <td><a data-remote="true" href="/templates/<%= t_p.id %>"><%= t_p.name %></a></td>
      <td>
        <a data-confirm="Вы действительно хотите удалить шаблон?" data-remote="true"
           data-method="delete" href="/templates/<%= t_p.id %>" rel="nofollow">
          <img src="/assets/del.png"></a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>