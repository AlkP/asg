<h1><%= @country.name %></h1>
<h3>/<%= @country.international_name %>/</h3>
<a href="towns/<%= @country.id %>/new"
   data-remote="true"
   role="button"
   class="btn btn-block btn-primary btn-sm"
   data-toggle="modal">Добавить город</a>
<div class="town-form"></div>
<table class="table">
  <thead>
  <tr>
    <th>
      Наименование
    </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @towns.each do |t| %>
    <tr class="active">
      <td><%= t.name %></td>
      <td>
        <a data-confirm="Вы действительно хотите удалить город?" data-remote="true"
           data-method="delete" href="/towns/<%= t.id %>" rel="nofollow">
          <img src="/assets/del.png"></a>
        <a data-remote="true" href="/towns/<%= t.id %>"><img src="/assets/pencil.png"></a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
