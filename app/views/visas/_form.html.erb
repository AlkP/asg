<%= form_for @visa, remote: true, :html => {:class => "form-horizontal"} do |visa| %>

  <div class="control-group">
    <%= visa.label :"Страна", :class => "control-label" %>
    <div class="controls">
      <select class="selectpicker" name="visa[country_id]">
        <% Country.all_alkp.each do |c| %>
          <option value="<%= c.id %>" <% if c.id == @visa.country_id %>selected="selected"<% end %>><%= c.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <%= visa.label :"Партнер", :class => "control-label" %>
    <div class="controls">
      <select class="selectpicker" name="visa[partner_id]">
        <% Partner.all_alkp.each do |p| %>
          <option value="<%= p.id %>" <% if p.id == @visa.partner_id %>selected="selected"<% end %>><%= p.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <%= visa.label :"Срок исполнения", :class => "control-label" %>
    <div class="controls">
      <%= visa.text_field :duration, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= visa.label :"Стоимость", :class => "control-label" %>
    <div class="controls">
      <%= visa.text_field :cost, :class => "input-xlarge" %>
    </div>
  </div>


  <div class="modal-footer">
    <button type="button" onclick="$('.visa-form').html('')" class="btn btn-default close-modal" data-dismiss="modal">Закрыть</button>
    <%= visa.submit value: "Сохранить", :class => "btn btn-primary", remote: true %>
  </div>
<% end %>